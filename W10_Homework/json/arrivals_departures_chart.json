{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive line graph showing monthly overseas arrivals and departures in Australia.",
  "width": 900,
  "height": 500,
  "data": {
    "url": "../data/total_arrivals_departures.csv"
  },
  "transform": [
    {
      "fold": ["Arrivals (M)", "Departures (M)"],
      "as": ["Type", "Value"]
    },
    {
      "calculate": "toNumber(datum.Value)",
      "as": "Millions"
    },
    {
      "calculate": "replace(datum['Month-Year'], '-', ' 20')",
      "as": "MonthLabel"
    },
    {
      "calculate": "timeParse(datum.MonthLabel, '%b %Y')",
      "as": "MonthParsed"
    }
  ],
  "params": [
    {
      "name": "TravelType",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Arrivals (M)", "Departures (M)"],
        "name": "Filter by: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "filter": "TravelType == 'All' || datum.Type == TravelType"
        }
      ],
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "x": {
          "field": "MonthParsed",
          "type": "temporal",
          "title": "Month",
          "axis": { "labelAngle": -45 }
        },
        "y": {
          "field": "Millions",
          "type": "quantitative",
          "title": "Passengers (Millions)"
        },
        "color": {
          "field": "Type",
          "type": "nominal",
          "scale": {
            "domain": ["Arrivals (M)", "Departures (M)"],
            "range": ["red", "steelblue"]
          },
          "title": "Travel Type"
        },
        "tooltip": [
          { "field": "MonthParsed", "type": "temporal", "title": "Month" },
          { "field": "Type", "type": "nominal" },
          { "field": "Millions", "type": "quantitative", "title": "Passengers (M)", "format": ".2f" }
        ]
      }
    }
  ]
}
