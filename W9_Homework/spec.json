{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australia Map with Local JSON Data",
  "width": 800,
  "height": 600,
  "projection": {"type": "mercator"},
  
  "layer": [
    {
      "data": {
        "url": "AUS_2016_AUST.json",
        "format": {"type": "topojson", "feature": "AUS_2016_AUST"}
    },
      "mark": {"type": "geoshape","fill": "lightgray","stroke": "white"}
      },
    {
      "data": {
        "url": "au-major-airports.csv"
      },
      "mark": {
        "type": "circle",
        "color": "red",
        "size": 100
      },
      "encoding": {
        "longitude": { "field": "longitude_deg", "type": "quantitative" },
        "latitude": { "field": "latitude_deg", "type": "quantitative" },
        "tooltip": {
          "field": "name",
          "type": "nominal"
        }
      }
    }
    ]
    }
    

