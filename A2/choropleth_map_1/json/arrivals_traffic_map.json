{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Short-Term Visitor Arrivals by State (June, 2024)",
  "width": 550,
  "height": 400,
  "projection": { "type": "mercator" },
  "data": {
    "url": "https://raw.githubusercontent.com/jnes0002/FIT3179/main/A2/choropleth_map_1/data/STE_2016_AUST.json",
    "format": { "type": "topojson", "feature": "STE_2016_AUST" }
  },
  "transform": [
    {
      "lookup": "properties.STE_NAME16",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jnes0002/FIT3179/main/A2/choropleth_map_1/data/Short-term_visitor_arrivals.csv",
        },
        "key": "STATE",
        "fields": [
          "Short-Term Visitor Arrivals",
          "State Population",
          "Short-Term Visitor Arrivals (Normalised)"
        ]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "color": {
      "field": "Short-Term Visitor Arrivals (Normalised)",
      "type": "quantitative",
      "scale": { "scheme": "reds" },
      "legend": {
        "title": "Arrivals per 1,000 Residents",
        "format": ".1f"
      }
    },
    "tooltip": [
      { "field": "properties.STE_NAME16", "type": "nominal", "title": "State" },
      { "field": "Short-Term Visitor Arrivals", "type": "quantitative", "title": "Arrivals", "format": ",.0f" },
      { "field": "State Population", "type": "quantitative", "title": "Population", "format": ",.0f" },
      { "field": "Short-Term Visitor Arrivals (Normalised)", "type": "quantitative", "title": "Arrivals per 1,000", "format": ".1f" }
    ]
  }
}





